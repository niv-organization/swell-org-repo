# -*- mode: yaml -*-

manifest:
  version: 1.0
 
config:
  admin:
    users: ['nivSwisa1']

automations:
  assign_code_editors:
      if:
        - - {{ length == 60 }}
      run:
        - action: add-reviewers@v1
          args:
            reviewers: {{ calc.owners }}
  run_e2e_tests:
      if:
        - true
      run:
        - action: add-comment@v1
          args:
            comment: |
              'niv rules'
calc:
  owners: {{ repo | rankByGitBlame(gt=25) }}

